<style>
  .cta {
    padding: 120px 0;
    text-align: center;
  }

  .cta-title {
    font-family: 'Space Mono', 'JetBrains Mono', monospace;
    font-size: clamp(32px, 4vw, 48px);
    font-weight: 700;
    letter-spacing: -0.03em;
    margin-bottom: 24px;
    color: var(--text-light);
  }

  .cta-subtitle {
    font-size: 18px;
    color: var(--text-muted);
    max-width: 500px;
    margin: 0 auto 40px;
    line-height: 1.6;
  }

  .btn-primary {
    display: inline-flex;
    align-items: center;
    gap: 12px;
    padding: 18px 32px;
    background: var(--text-light);
    color: var(--bg-dark);
    border-radius: 16px;
    font-size: 17px;
    font-weight: 500;
    text-decoration: none;
    transition: all 0.25s cubic-bezier(0.4, 0, 0.2, 1);
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.2);
  }

  .btn-primary:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 30px rgba(255, 255, 255, 0.15);
  }

  .btn-primary svg {
    width: 20px;
    height: 20px;
  }

  @media (max-width: 900px) {
    .cta {
      padding: 80px 0;
    }

    .cta-title {
      font-size: clamp(24px, 6vw, 32px);
      margin-bottom: 16px;
    }

    .cta-subtitle {
      font-size: 14px;
      margin-bottom: 32px;
      padding: 0 16px;
    }

    .btn-primary {
      padding: 16px 24px;
      font-size: 15px;
      border-radius: 14px;
      gap: 10px;
    }

    .btn-primary svg {
      width: 18px;
      height: 18px;
    }
  }

</style>

<style is:global>
  .try-me-indicator {
    position: absolute;
    top: -50px;
    left: 50%;
    transform: translateX(80px);
    display: flex;
    flex-direction: column;
    align-items: center;
    z-index: 9998;
    pointer-events: none;
    animation: tryMeBounce 2s ease-in-out infinite;
  }

  .try-me-arrow {
    transform: scaleX(-1) rotate(17deg);
    margin-top: -20px;
    margin-right: -49px;
  }

  .try-me-text {
    font-family: 'Caveat', cursive;
    font-size: 24px;
    color: rgba(255,255,255,0.6);
    transform: rotate(5deg);
  }

  @keyframes tryMeBounce {
    0%, 100% { transform: translateX(80px) translateY(0); }
    50% { transform: translateX(80px) translateY(-8px); }
  }

  .try-me-indicator {
    transition: opacity 0.3s ease;
  }

  .try-me-indicator.hidden {
    opacity: 0;
    pointer-events: none;
  }

  @media (max-width: 768px) {
    .try-me-indicator {
      display: none;
    }
  }
</style>

<script>
  const tryMeIndicator = document.querySelector('.try-me-indicator') as HTMLElement;
  const notch = document.getElementById('notch');

  if (tryMeIndicator) {
    // Show when demo completes or stops
    window.addEventListener('simulationComplete', () => {
      tryMeIndicator.classList.remove('hidden');
    });

    // Hide when demo starts (replay)
    window.addEventListener('startSimulation', () => {
      tryMeIndicator.classList.add('hidden');
    });

    // Hide when notch is clicked
    if (notch) {
      notch.addEventListener('click', () => {
        tryMeIndicator.classList.add('hidden');
      });
    }
  }
</script>
